{
  "$schema": "https://design-tokens.github.io/community-group/format/#schema",
  "minimoto": {
    "color": {
      "redNuclear": { "value": "#E21E0A" },
      "blackAbsolute": { "value": "#000000" },
      "blackCarbon": { "value": "#1A1A1A" },
      "graySteel": { "value": "#2F2F2F" },
      "grayCement": { "value": "#8E8E8E" },
      "grayBone": { "value": "#D9D9D9" },
      "whiteTech": { "value": "#FFFFFF" },
      "redDried": { "value": "#7A0C06" }
    },
    "usage": {
      "background": { "value": "{minimoto.color.blackAbsolute}" },
      "surface": { "value": "{minimoto.color.blackCarbon}" },
      "text": { "value": "{minimoto.color.grayBone}" },
      "textStrong": { "value": "{minimoto.color.whiteTech}" },
      "accent": { "value": "{minimoto.color.redNuclear}" },
      "accentDeep": { "value": "{minimoto.color.redDried}" }
    },
    "rules": {
      "accentMaxShare": { "value": 0.1, "description": "Keep red as ~10% max so it keeps power." },
      "mixingNote": { "value": "Avoid using pure white as a dominant background with red; prefer black/gray foundations." }
    }
  }
}
